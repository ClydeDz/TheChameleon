<script>
    function updateSiteTheme(theme){
        switch (theme) {
            case 'neon':
                document.getElementById('CssTheme').href = '../Content/Neon.min.css';
                break;
            case 'retro':
                document.getElementById('CssTheme').href = '../Content/Retro.min.css';
                break;
            default:
                document.getElementById('CssTheme').href = '../Content/Neon.min.css';
                break;
        }
    }
</script>
