@{
    ViewBag.Title = "You choose the theme for this website";
}

<div class="container ctn-theme-picker">
    <div class="row">
        <div class="col-xs-12 text-right">
            <div class="theme-picker">
                <span>Pick a theme:&nbsp;</span>
            </div>
            <div class="theme-picker">
                <div class="circle vintage" title="Vintage" onclick="updateSiteTheme('vintage', this);">
                    <div class="part part_1"></div>
                    <div class="part part_2"></div>
                    <div class="part part_3"></div>
                    <div class="part part_4"></div>
                </div>
            </div>
            <div class="theme-picker">
                <div class="circle neon" title="Neon" onclick="updateSiteTheme('neon', this);">
                    <div class="part part_1"></div>
                    <div class="part part_2"></div>
                    <div class="part part_3"></div>
                    <div class="part part_4"></div>
                </div>
            </div>
            <div class="theme-picker active">
                <div class="circle retro" title="Retro" onclick="updateSiteTheme('retro', this);">
                    <div class="part part_1"></div>
                    <div class="part part_2"></div>
                    <div class="part part_3"></div>
                    <div class="part part_4"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container website-header">
    <div class="row">
        <div class="col-xs-12">
            <img src="~/Images/Icons/cham-retro-circle.png" alt="The Chameleon's icon" />
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <h1>The Chameleon</h1>
        </div>
    </div>
